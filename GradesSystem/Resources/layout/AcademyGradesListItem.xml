<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_CourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Name"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:textColor="#fff69212"
            android:textStyle="bold"
            android:background="#ffffffff" />

        <TextView
            android:id="@+id/tv_CourseGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Grade"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:textColor="#fff69212"
            android:textStyle="bold"
            android:background="#ffffffff" />

        <TextView
            android:id="@+id/tv_CourseCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Credit"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:textColor="#fff69212"
            android:textStyle="bold"
            android:background="#ffffffff" />

        <Button
            android:id="@+id/btn_CourseEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:longClickable="false"
            android:textSize="16dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:layout_marginLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:textColor="#fff69212"
            android:textStyle="bold"
            android:background="#ffffffff" />

    </LinearLayout>

</LinearLayout>
